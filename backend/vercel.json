{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/health$", "dest": "/api/health.js" },
    { "src": "/auth/login$", "dest": "/api/auth-login.js" },

    { "src": "/notes$", "dest": "/api/notes/index.js" },
    { "src": "/notes/(?<id>[^/]+)$", "dest": "/api/notes/[id].js?id=$id" },

    { "src": "/tenants/(?<slug>[^/]+)/upgrade$", "dest": "/api/tenants/[slug]/upgrade.js?slug=$slug" }
  ]
}
