{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/health", "destination": "/api/health.js" },
    { "source": "/auth/login", "destination": "/api/auth-login.js" },
    { "source": "/notes", "destination": "/api/notes/index.js" },
    { "source": "/notes/:path*", "destination": "/api/notes/:path*.js" },
    { "source": "/tenants/:slug/upgrade", "destination": "/api/tenants/[slug]/upgrade.js" }
  ]
}
